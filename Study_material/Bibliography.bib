author = {van Schoor, M.C. and von Flotow, A.H. and Zerweckh, S.H.},
doi = {10.2514/6.1989-1187},
file = {:C$\backslash$:/Users/arthu/Documents/GitHub/HAR{\_}wing{\_}aeroelasticity/Study{\_}material/AeroelasticStabilityFlexibleAircraft.pdf:pdf},
number = {January 1987},
title = {{Aeroelastic stability and control of a highly flexible aircraft}},
year = {1989}

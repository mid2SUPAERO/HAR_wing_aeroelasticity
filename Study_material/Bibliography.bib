issn = {02734508},
journal = {Collection of Technical Papers - AIAA/ASME/ASCE/AHS/ASC Structures, Structural Dynamics and Materials Conference},
number = {April},
pages = {4091--4100},
title = {{Optimization of composite wing structures for maximum flutter speed}},
